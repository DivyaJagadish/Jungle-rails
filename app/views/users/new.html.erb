<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |form| %>

  <div class="form-group">
  <%= form.label :"Firstname" %>
  <%= form.text_field :firstname, class: 'form-control' %>
 </div>
  <div class="form-group">
  <%= form.label :"Lastname" %>
  <%= form.text_field :lastname, class: 'form-control' %>
 </div>
  <div class="form-group">
  <%= form.label :"Email" %>
  <%= form.text_field :email, class: 'form-control' %>
</div>
 <div class="form-group">
  <%= form.label :"Password" %>
  <%= form.text_field :password, class: 'form-control' %>
</div>
 <div class="form-group">
  <%= form.label :"Password Confirmation" %>
  <%= form.text_field :password_confirmation , class: 'form-control' %>
</div>
 <div class="form-group">
  <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>

<% end %>
